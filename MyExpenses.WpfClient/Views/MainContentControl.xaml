<UserControl x:Class="MyExpenses.WpfClient.Views.MainContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:MyExpenses.WpfClient.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentPresenter Content="{Binding CurrentPage, Converter={converters:GeneralPageToControlConverter}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
</UserControl>
